<div class="box">
  <div class="box-container">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <h3>新しいアカウントを作成</h3>
        <div class="field-wrapper">
          <div class="field username">
            <%= f.text_field :username, autofocus: true, autocomplete: "username", required: true, placeholder: "ユーザー名" %>
          </div>

          <div class="field email">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "メールアドレス" %>
          </div>

          <div class="field password">
            <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: "パスワード" %>
          </div>

          <div class="field pass-confirm">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: "パスワード確認" %>
          </div>

          <div class="btn account-create">
            <%= f.submit "新しいアカウントを作成" %>
          </div>

          <div class="link">
            <%= link_to "すでにパスワードをお持ちの方はログイン", new_user_session_path, class: "link" %>
          </div>
        
    <% end %>
  </div>
</div>
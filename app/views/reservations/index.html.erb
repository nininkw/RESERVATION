<h3>予約済みルーム一覧</h3>

<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>合計金額</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日時</th>
    </tr>
  </thead>
  
  <tbody>
    <% @reservations.each do |reservation| %>
    <% @room_post = RoomPost.find(reservation.room_id) %>
      <tr>
        <td>
          <%= link_to "/room_posts/#{reservation.room_id}" do %>
            <%= image_tag @room_post.room_img.url %>
          <% end %>
        </td>
        <td><%= link_to @room_post.room_name, "/room_posts/#{reservation.room_id}" %></td>
        <td><%= @room_post.room_introduction %></td>
        <td><%= reservation.total_fee %></td>
        <td><%= reservation.check_in%></td>
        <td><%= reservation.check_out%></td>
        <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>  

